<div class="row">
  <h1>The Bearded Wanderer</h1>
</div>


<div class="row"> 
  <fieldset>
      <legend>Log In</legend>
    <form method="POST" action="/login">
      <div class="large-4 columns">
        <input type="text" id="email" name="email" placeholder="Email">
      </div>
      <div class="large-4 columns">
        <input type="password" id="password" name="password" placeholder="password">
      </div>
        <input type="submit" class="small button primary radius" value="Login">
    </form>
  </fieldset>
</div>
    

<div class="row">
  <h4>Thinking of going to any tech events in London - Look no further.</h4>
  <h4> Just Register below to find events and add them to your personal selection </h4>
</div>

<div class="row">
    <%= form_for @new_user do |f| %>
      <%= f.text_field :username, :placeholder => "Username" %>
      <%= f.text_field :email, :placeholder => "Email address" %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm password" %>
      <%= f.submit "Register", class: 'button success round' %>
    <% end %>
</div>



<div class="row">
  <div>
    <% if @current_user %>  
      <h3>You are logged in as: <%= current_user.username if current_user%></h3>
      <form method="GET" action="/logout">
        <input type="submit" value="Logout" class="button small radius secondary">
      </form>
    <% else %>
      <h4> You are not logged in. </h4>
    <% end %>
  </div>

</div>







