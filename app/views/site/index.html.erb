<% if @current_user %>

  <%= form_for(@user, :remote => true) do |f|%>
    <%= f.label :username, "Username" %>
    <%= f.text_field :username %><br>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %><br>
    <%= f.label "user[password]", "Password" %>
    <%= password_field_tag "user[password]" %><br>
    <%= f.label "user[password_confirmation]", "Confirm Password" %>
    <%= password_field_tag "user[password_confirmation]" %><br>
    <%= f.submit "Submit" %>
  <% end %>

  <% @users.each do |user| %>
  <p> <%= user.name %> </p>
  <% end %>

<% else %>

  <a href="/home">go home</a>

<% end %>